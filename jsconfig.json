{
  "include": ["src/**/*"],
  "exclude": ["node_modules/**/*", "dist/**/*", "logs/**/*"],
  "compilerOptions": {
    "baseUrl": "./",
    "module": "ES6",
    "target": "ES6",
    "moduleResolution": "node",
    "paths": {
      "@common/*": ["src/common/*"],
      "@config/*": ["src/config/*"],
      "@core/*": ["src/core/*"],
      "@modules/*": ["src/modules/*"],
      "@scripts/*": ["src/scripts/*"]
    }
  }
}
